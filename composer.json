{
  "name": "alma/alma-gateway-for-woocommerce",
  "description": "Alma - Pay in installments or later for WooCommerce",
  "type": "library",
  "require": {
    "php": "^5.6 || ~7.0 || ~7.1 || ~7.2 || ~7.3 || ~7.4 || ~8.0 || ~8.1",
    "alma/alma-php-client": ">=2.4.0",
    "ext-openssl": "*"
  },
  "require-dev": {
    "dealerdirect/phpcodesniffer-composer-installer": "^0.7.0",
    "johnpbloch/wordpress-core": "*",
    "mockery/mockery": "^1.3",
    "phpcompatibility/php-compatibility": "^9.3",
    "phpcompatibility/phpcompatibility-wp": "^2.1",
    "phpunit/phpunit": "*",
    "squizlabs/php_codesniffer": "^3.5",
    "symfony/var-dumper": "*",
    "woocommerce/woocommerce": "*",
    "wp-coding-standards/wpcs": "^2.3",
    "yoast/phpunit-polyfills": "*",
    "ext-simplexml": "*"
  },
  "autoload": {
    "psr-4": {
      "Alma\\Gateway\\": "includes/"
    }
  },
  "autoload-dev": {
    "psr-4": {
      "Alma\\Gateway\\Tests\\": "tests/"
    }
  },
  "extra": {
    "installer-disable": [
      "wordpress"
    ]
  },
  "license": "GPL-3.0-only",
  "authors": [
    {
      "name": "Alma",
      "email": "contact@almapay.com"
    }
  ],
  "scripts": {
    "phpcs": "vendor/bin/phpcs --standard=phpcs.xml .",
    "phpcbf": "vendor/bin/phpcbf --standard=phpcs.xml .",
    "php-compatibility": "vendor/bin/phpcs -p src --standard=PHPCompatibility -s --runtime-set testVersion 5.6-8.1 --ignore=\\*/vendor/\\*"
  },
  "config": {
    "sort-packages": true,
    "allow-plugins": {
      "composer/installers": true,
      "dealerdirect/phpcodesniffer-composer-installer": true,
      "automattic/jetpack-autoloader": true
    },
    "lock": false
  }
}
